@using OnlineStore.Models.IdentityModels.ViewModels
@model RegisterViewModel
@*<div class="d-flex align-items-center justify-content-evenly w-75 vh-100 bg-light rounded-3">*@
<div class="container mx-auto w-75 bg-light rounded-3 mb-5">

    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="h2 mb-3">Registration</div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating mb-3">
            <input asp-for="Email" type="email" placeholder="name@example.com" class="form-control form-control-sm" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" type="password" placeholder="password" class="form-control" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="PasswordConfirm" type="password" placeholder="confirm password" class="form-control" />
            <label asp-for="PasswordConfirm">Confirm password</label>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mb-3">Register</button>
    </form>

    <div class="alert alert-info">
        Do not log in? <a asp-controller="Account" asp-action="Login" class="link-primary text-decoration-none">Log in</a>
    </div>
</div>

