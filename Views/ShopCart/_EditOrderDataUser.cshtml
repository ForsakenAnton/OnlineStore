@model OnlineStore.Models.ViewModels.OrderDataUserViewModel
<form id="editOrderDataUserFormId" onsubmit="ajaxPostEditPostOrderDataUser()" method="post">

    <div class="row mb-3">

        <input id="id" asp-for="Id" type="hidden" />

        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input id="name" asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input id="surname" asp-for="Surname" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input id="email" asp-for="Email" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>