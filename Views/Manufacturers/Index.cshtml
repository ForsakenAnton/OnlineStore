@model IEnumerable<OnlineStore.Models.Manufacturer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-success mb-3">Create New Manufacturer</a>
</p>
</p>
<table class="table table-sm align-middle text-dark altetnate-table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="data:image/*;base64,@(Convert.ToBase64String(item.Image))" style="width:3rem" alt="Category image">
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn btn-outline-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
