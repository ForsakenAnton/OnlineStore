@model OnlineStore.Models.ModelsDTO.TemplatesListDto

@{
    //ViewData["Title"] = "DeleteTemplate";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model.ListDto)
        {
        <div class="border border-1 rounded rounded-3 mb-3">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => item.Property)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => item.Property)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => item.TakePartInSort)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => item.TakePartInSort)
            </dd>
        </div>
        }
    </dl>
    
    <form asp-action="DeleteTemplate">
        <input type="hidden" name="Id" value="@ViewBag.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
