@model OnlineStore.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Category.Id" hidden />

            <div class="mb-3">
                <label asp-for="Category.Title" class="form-label"></label>
                <input asp-for="Category.Title" class="form-control" value="@Model.Category.Title" />
                <span asp-validation-for="Category.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category.Order" class="form-label"></label>
                <input asp-for="Category.Order" class="form-control" value="@Model.Category.Order" />
                <span asp-validation-for="Category.Order" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Category.IsTop" class="form-check-input" type="checkbox">
                <label asp-for="Category.IsTop" class="form-check-label">
                    @Html.DisplayNameFor(model => model.Category.IsTop)
                </label>
            </div>
            <div class="mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <div class="form-text mb-5">Change image</div>
                <figure class="figure text-center">
                    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Category.Image))" class="figure-img img-fluid rounded" style="width:10rem" alt="Category image">
                    <figcaption class="figure-caption">Current picture.</figcaption>
                </figure>
            </div>

            <input asp-for="Category.Image" type="hidden" />
            <input asp-for="Category.CategoryLevel" type="hidden" />
            <input asp-for="Category.ParentCategoryId" type="hidden" />

            <input type="submit" value="Save" class="btn btn-primary" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

