@using OnlineStore.Models.ViewModels
@model CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create new category</h1>

<h4>Category</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <span class="text-info">* </span>
                <label asp-for="Category.Title" class="form-label"></label>
                <input asp-for="Category.Title" class="form-control" />
                <span asp-validation-for="Category.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <span class="text-info">* </span>
                <label asp-for="Category.Order" class="form-label"></label>
                <input type="number" asp-for="Category.Order" class="form-control" />
                <span asp-validation-for="Category.Order" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Category.IsTop" class="form-check-input" type="checkbox">
                <label asp-for="Category.IsTop" class="form-check-label">
                    @Html.DisplayNameFor(model => model.Category.IsTop)
                </label>
            </div>
            <div class="mb-3">
                <span class="text-info">* </span>
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <input asp-for="Category.CategoryLevel" value="@Model.Category.CategoryLevel" type="hidden" />
            <input asp-for="Category.ParentCategoryId" value="@Model.Category.ParentCategoryId" type="hidden" />

            <input type="submit" value="Create" class="btn btn-primary" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

