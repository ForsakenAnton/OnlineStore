@model IEnumerable<OnlineStore.Models.Manufacturer>

<div class="container-fluid pt-5 mb-5">
    <div class="row gy-3 pb-2 justify-content-around bg-light" style="border-radius:1rem">
        @*<div class="offset-xxl-2 offset-sm-0"></div>*@
        @foreach (var item in Model)
        {

        <div class="col-xxl-2 col-xl-3 col-lg-6 col-12 p-3 text-center position-relative">
            <img src="data:image/*;base64,@(Convert.ToBase64String(item.Image))" class="img-fluid" style="max-height:3rem" alt="@item.Image.ToString()">
            <a href="#" class="stretched-link"></a>
        </div>

        }
        @*<div class="offset-xxl-2 offset-sm-0"></div>*@
    </div>
</div>